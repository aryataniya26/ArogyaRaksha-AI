# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Firebase Admin SDK (Get from Firebase Console)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# JWT (Optional - for additional token layer)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=7d

# SMS - Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SMS - Fast2SMS (Indian Provider)
FAST2SMS_API_KEY=your-fast2sms-api-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# DigiLocker API
DIGILOCKER_CLIENT_ID=your-digilocker-client-id
DIGILOCKER_CLIENT_SECRET=your-digilocker-client-secret
DIGILOCKER_REDIRECT_URI=http://localhost:5000/api/v1/digilocker/callback

# Firebase Cloud Messaging (for admin operations)
FCM_SERVER_KEY=your-fcm-server-key

# AI Module API
AI_API_URL=http://localhost:5001
AI_API_KEY=your-ai-api-secret-key

# Emergency Services
EMERGENCY_NUMBER_108=108
EMERGENCY_NUMBER_102=102
EMERGENCY_ALERT_RADIUS_KM=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Logging
LOG_LEVEL=debug